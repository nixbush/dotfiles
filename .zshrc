ZSH_HIGHLIGHT_STYLES[redirection]='fg=#F8F8F2'
ZSH_HIGHLIGHT_STYLES[arg0]='fg=#F8F8F2'
ZSH_HIGHLIGHT_STYLES[default]='fg=#F8F8F2'
# ZSH_HIGHLIGHT_STYLES[cursor]='standout'
# Autosuggestion highlight
# ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=#6272a4"

# # Load ZSH plugins
PLUGIN_DIR="/usr/share/zsh/plugins"

eval "$(dircolors "$HOME/.dircolors")"
eval "$(starship init zsh)"
eval "$(ssh-agent -s)" > /dev/null 2>&1

source "$PLUGIN_DIR/zsh-autosuggestions/zsh-autosuggestions.zsh"
source "$PLUGIN_DIR/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"

# ------------------------------
# Aliases
# ------------------------------
alias vi='$EDITOR'
alias ls='ls -lhAv --group-directories-first --color=auto'
alias zsh='clear && zsh'
alias mkdir='mkdir -p'
alias rm='trash-put'
alias purge='rm -r'
alias cp='cp -r'
alias pkgi='paru -S'
alias pkgf='pacman -Ss'
alias pkgfa='paru -Ss'
alias pkgr='paru -Rncs'
alias pkgu='paru -Syu'
alias tree='tree -aCL 3 --gitignore'
alias cp='cp -r'
alias record='wf-recorder -c h264_vaapi -d /dev/dri/renderD128'
alias recordarea='wf-recorder -c h264_vaapi -d /dev/dri/renderD128 -g $(slurp)'
alias cdwine='cd $HOME/.wine/drive_c/users/nix/'
alias gitc='git add -A && git commit -m'
alias gitcm='git add -A && git commit'

alias dotfiles="git --git-dir=$HOME/.repos/dotfiles --work-tree=$HOME"
alias hibernate="systemctl hibernate"
